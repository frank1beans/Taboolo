# Taboolo - Measure Maker Backend Configuration
# Copia questo file in .env e configura i valori

# Debug Mode (PRODUCTION: sempre False)
TABOO_DEBUG=False

# CORS Origins (comma-separated, mai usare "*")
TABOO_CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Upload Limits
TABOO_MAX_UPLOAD_SIZE_MB=15

# Rate Limiting
TABOO_RATE_LIMIT_ENABLED=True
TABOO_RATE_LIMIT_PER_MINUTE=60

# Storage (opzionale, default: ./storage)
# TABOO_STORAGE_ROOT=/path/to/storage

# Database (opzionale, default: storage/database.sqlite)
# TABOO_DATABASE_PATH=database.sqlite
